<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_study_coin"
    android:layout_width="260dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/popup_frag_clo_center" />


    <LinearLayout
        android:id="@+id/popup_clo_center_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/popup_clo_center_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="亲爱的"
               android:layout_marginRight="3dp"
               android:textColor="#4a4a4a"
               android:textSize="14sp" />
           <TextView
               android:id="@+id/popup_clo_center_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:paddingBottom="3dp"
               android:maxLines="1"
               android:maxLength="20"
               android:background="@drawable/popup_clo_center_name"
               android:textColor="#f39700"
               android:textSize="16sp" />
       </LinearLayout>

        <TextView
            android:id="@+id/popup_clo_center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text=""
            android:textColor="#4a4a4a"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>