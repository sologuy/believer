<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/act_things_comment_item_press"
    android:orientation="vertical"
    >

    <com.lhdd.reading4.view.CircleImageView
        android:id="@+id/act_comment_item_head"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/defaulthead" />

    <TextView
        android:id="@+id/act_comment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/act_comment_item_head"
        android:text=""
        android:maxLines="1"
        android:layout_marginTop="8dp"
        android:textColor="@color/tv_color_title"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/act_comment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/act_comment_item_name"
        android:layout_below="@+id/act_comment_item_name"
        android:layout_marginTop="3dp"
        android:textColor="#9b9b9b"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/act_comment_item_like_icon"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:layout_toLeftOf="@+id/act_comment_item_liskenum"
        android:paddingRight="8dp"
        android:src="@mipmap/act_video_web_like_not" />

    <TextView
        android:id="@+id/act_comment_item_liskenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#9b9b9b"
        android:textSize="9sp" />



    <TextView
        android:id="@+id/act_comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/act_comment_item_date"
        android:layout_below="@+id/act_comment_item_date"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:text=""
        android:textColor="#2a2a2a"
        android:textSize="10sp" />
    <View
        android:layout_width="match_parent"
        android:background="#E5E0E7"
        android:layout_below="@+id/act_comment_item_content"
        android:layout_alignLeft="@+id/act_comment_item_content"
        android:layout_marginBottom="5dp"
        android:layout_height="1dp"/>

</RelativeLayout>