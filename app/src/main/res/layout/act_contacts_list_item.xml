<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/act_contact_list_item_catalog"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#eae9e9"
        android:gravity="center_vertical"
        android:paddingLeft="20dip"
        android:text="A"
        android:textColor="#454545"
        android:textSize="14sp" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingLeft="5dip">

        <com.lhdd.reading4.view.CircleImageView
            android:id="@+id/act_contact_list_item_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:transitionName="act_image"
            android:src="@mipmap/defaulthead" />

        <TextView
            android:id="@+id/act_contact_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/act_contact_list_item_head"
            android:gravity="center_vertical"
            android:maxLength="13"
            android:text=""
            android:transitionName="act_textview"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#6f6f6f"
            android:textSize="9sp"
            android:layout_below="@+id/act_contact_list_item_name"
            android:maxLines="1"
            android:maxLength="30"
            android:layout_marginTop="6dp"
            android:id="@+id/act_contact_list_item_msg"
            android:layout_alignLeft="@+id/act_contact_list_item_name"
            />

        <TextView
            android:id="@+id/act_contact_list_item_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/act_contact_list_item_name"
            android:background="@drawable/act_contact_list_manage_bg"
            android:padding="6dp"
            android:layout_marginLeft="12dp"
            android:text=""
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:textColor="#ffff"
            android:textSize="9sp" />
        <TextView
            android:id="@+id/act_contact_list_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/act_contact_list_add_bg"
            android:padding="7dp"
            android:text="添加"
            android:visibility="gone"
            android:textColor="#ffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2" />
</LinearLayout>