<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/template_public_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/act_clo_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/placeholder_logo" />

        <ImageView
            android:id="@+id/act_clo_detail_center_like"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/act_iam_clo_item_flower_on"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <TextView
            android:id="@+id/act_clo_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="30"
            android:layout_marginRight="60dp"
            android:textColor="@color/tv_color_title"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/act_clo_detail_like"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/act_iam_clo_item_flower_off" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9b9b9b"
            android:textSize="10sp"
            android:id="@+id/act_clo_detail_likenum"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/act_clo_detail_like"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f8f8f8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_info"
        android:layout_weight="1"
        android:background="#fff">

        <TextView
            android:id="@+id/act_clo_detail_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:maxLength="20"
            android:maxLines="1"
            android:text="个人简介"
            android:textColor="@color/tv_color_title"
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_clo_detail_introduction"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/act_clo_detail_introduction_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/tv_color_text"
                    android:textSize="12sp" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</LinearLayout>