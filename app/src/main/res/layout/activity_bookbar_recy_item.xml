<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    >

    <ImageView
        android:id="@+id/imgNewsItem"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_read_party_img" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/imgNewsItem"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="#4a4a4a"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgNewsItem"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvLookNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imgNewsItem"
        android:drawableLeft="@mipmap/act_clo_class_item_read"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="1"
        android:textColor="#9b9b9b"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tvCommentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tvLookNum"
        android:drawableLeft="@mipmap/act_clo_class_item_comment"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="366"
        android:textColor="#9b9b9b"
        android:textSize="11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvShareNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tvCommentNum"
        android:drawableLeft="@mipmap/act_book_bar_item_share"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="366"
        android:textColor="#9b9b9b"
        android:textSize="11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="14dp"
        android:maxLines="1"
        android:text=""
        android:textColor="#9b9b9b"
        android:textSize="12sp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:background="@color/gray" />
</RelativeLayout>